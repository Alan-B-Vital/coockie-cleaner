{
  "manifest_version": 3,
  "name": "Cookie Cleaner",
  "version": "1.0",
  "description": "Limpa os cookies da aba ativa",
  "permissions": [
    "cookies",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "32": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}